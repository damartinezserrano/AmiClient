<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marti.amiclient.ui.WelcomeUI"
    android:orientation="vertical"
    android:weightSum="3"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/greatMargin"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/fondo_bienvenida3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido."
            android:textColor="@color/white"
            android:textSize="@dimen/subTitleSize"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preguntaservicio"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="@dimen/subTitleSize"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:layout_marginTop="@dimen/greatMargin"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <Button
            android:id="@+id/propio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/propio"
            android:textColor="@color/black"
            android:textSize="@dimen/smallWordSize"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.CustomWelcomeButton"
            android:paddingStart="@dimen/margin10dp"
            android:paddingEnd="@dimen/margin10dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/otros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/propio"
            android:text="@string/otros"
            android:textColor="@color/black"
            android:textSize="@dimen/smallWordSize"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.CustomWelcomeButton"
            android:paddingStart="@dimen/margin10dp"
            android:paddingEnd="@dimen/margin10dp"
            android:layout_marginStart="@dimen/margin10dp"
            android:textAllCaps="false"
            />
    </RelativeLayout>

</LinearLayout>
