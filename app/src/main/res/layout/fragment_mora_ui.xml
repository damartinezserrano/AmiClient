<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marti.amiclient.ui.MoraUI"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="2"
    android:clickable="true"
    android:focusable="true"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingStart="@dimen/padLeft"
        android:paddingEnd="@dimen/padRight"
        android:background="@color/redOpacity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/corazon_blanco_logo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/shortMargin"
        android:layout_marginBottom="@dimen/mediumMargin"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/CustomLayout"
        android:layout_weight="0"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enmora"
            android:layout_marginBottom="@dimen/mediumMargin"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/llamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_servcioc_rojo"
            android:layout_gravity="center"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>
